    </Cs>
</PreviewContainer>

@code{
    private class ToShow
    {
        public string Name { get; set; }

        public ToShow(string name)
        {
            Name = name;
        }
    }

    private List<ToShow> _collection = new()
    {
        new ToShow("first"),
        new ToShow("second"),
        new ToShow("third"),
    };

    private string _picked = "Choose item";

    private void Pick(ToShow toShow)
    {
        _picked = toShow.Name;
        StateHasChanged();
    }
}
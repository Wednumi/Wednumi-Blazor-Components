<PreviewContainer>
    <Name>PickList</Name>
    <Example>
        @_picked
        <PickList Collection="_collection" 
            NamePropExpression="s => s.Name"
            PickAction="Pick" 
            ShowSearch=true/>        
    </Example>
    <Razor>
@@_picked
&lt;PickList Collection="_collection"
    NamePropExpression="s => s.Name"
    PickAction="Pick"
    ShowSearch=true/>
    </Razor>
    <Cs>
private class ToShow
{
    public string Name { get; set; }
}

private List&lt;ToShow> _collection;

private void Pick(ToShow toShow)
{
    _picked = toShow.Name;
    StateHasChanged();
